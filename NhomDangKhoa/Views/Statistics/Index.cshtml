@model IEnumerable<NhomDangKhoa.Models.DepartmentStatisticsViewModel>

@{
    ViewData["Title"] = "Employee Statistics";
}

<h1>@ViewData["Title"]</h1>

<p>
    Thống kê số lượng, tổng lương và số nhân viên nữ theo từng phòng ban.
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().NumberOfEmployees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TotalSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TotalOfFemale)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfEmployees)
                </td>
                <td>
                    @* Định dạng lại số tiền cho dễ đọc *@
                    @item.TotalSalary.ToString("N2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOfFemale)
                </td>
            </tr>
        }
    </tbody>
</table>