@model IEnumerable<NhomDangKhoa.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách nhân viên</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo nhân viên mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th>Ảnh đại diện</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th>Phòng ban</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@(item.Gender == true ? "Nam" : "Nữ")</td>
                <td>@item.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoImagePath))
                    {
                        <img src="@item.PhotoImagePath" width="100" height="100" />
                    }
                </td>
                <td>@item.Salary?.ToString("N0")</td>
                <td>@item.Department?.DepartmentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.EmployeeId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
